<Window x:Class="CompMathPart3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompMathPart3"
        mc:Ignorable="d"
        Title="CompMath pt.3" 
        Height="600" 
        Width="1300" 
        ResizeMode="NoResize">
    <TabControl>

        <TabItem Header="Решение НУ методом бисекции">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" ></RowDefinition>
                    <RowDefinition Height="2*" ></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="409*"></ColumnDefinition>
                    <ColumnDefinition Width="234*"/>
                    <ColumnDefinition Width="643*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <GroupBox Header="Controls" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0*"></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>


                        <Label Content="уравнение:" 
                               Grid.Column="0" 
                               Grid.Row="1" 
                               HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               Foreground="Gray" 
                               FontSize="15"
                               Margin="40,15,40,15"/>

                        <ComboBox Name="EquationList" 
                                  HorizontalAlignment="Left" 
                                  Foreground="DarkBlue" 
                                  Width="164" 
                                  Grid.Column="1" 
                                  Grid.Row="1" 
                                  Margin="26,18,0,33" 
                                  SelectionChanged="EquationList_SelectionChanged">
                            <ComboBoxItem IsSelected="True" >
                                <TextBlock>x^5+4=0</TextBlock>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <TextBlock>3cos(3x)=0</TextBlock>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <TextBlock>1.5sin(1.5x)-3cos(3x)=0</TextBlock>
                            </ComboBoxItem>
                        </ComboBox>

                        <TextBlock Grid.Column="0" Panel.ZIndex="1"
                                   Background="White"
                                   Name="SectionLabel" 
                                   Grid.Row="2" 
                                   Grid.RowSpan="2" 
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="Gray" 
                                   FontSize="15" Margin="10,50">
                            границы отрезка:
                        </TextBlock>


                        <TextBox Visibility="Visible"
                                 Name="UpperLimit"
                         Grid.Column="1" 
                         Grid.Row="2"
                         BorderBrush="Black" 
                         MaxLength="10"
                         MaxLines="1"
                         TextAlignment="Center"
                         LostFocus="TextBox_LostFocus"
                         Margin="61,26,61,26">
                            1
                        </TextBox>

                        <TextBox Visibility="Visible"
                                 Name="LowerLimit" 
                                 Grid.Column="1" 
                                 Grid.Row="3"  
                                 BorderBrush="Black" 
                                 MaxLength="10"
                                 MaxLines="1"
                                 TextAlignment="Center"
                                 LostFocus="TextBox_LostFocus"
                                 Margin="61,26,61,26">
                            0
                        </TextBox>


                        <Label Content="погрешность:" 
                               Grid.Column="0" 
                               Grid.Row="4" 
                               HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               Foreground="Gray" 
                               FontSize="15"
                               Margin="40,15,40,15"/>

                        <TextBox Name="Accuracy" 
                         Grid.Column="1" 
                         Grid.Row="4" 
                         BorderBrush="Black" 
                         MaxLength="15"
                         MaxLines="1"
                         Height="20"
                         TextAlignment="Center"
                         LostFocus="TextBox_LostFocus"
                         Margin="40,15,40,15">
                            0.1
                        </TextBox>

                        <Button Grid.Column="2" 
                                Grid.Row="2" 
                                Margin="50,0,10,42" 
                                Background="LightGreen" 
                                Click="Solve_Equation_Bisection">
                            Найти решение
                        </Button>

                        <Button Grid.Column="2"
                                Grid.Row="3"
                                Margin="50,42,10,0"
                                Background="LightPink"
                                Click="Backhitch_Bisection">
                            Очистить
                        </Button>

                    </Grid>
                </GroupBox>

                <GroupBox Header="Log" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                    <ScrollViewer Name="ConsoleScrollViewer" 
                          VerticalScrollBarVisibility="Auto">
                        <TextBlock Name="OutputConsole"
                           Background="DarkSlateGray"
                           FontSize="12"
                           Foreground="LightGray"
                           FontWeight="Bold"
                           FontFamily="Consolas"
                           TextWrapping="Wrap" 
                           Padding="5"/>
                    </ScrollViewer>
                </GroupBox>

                <GroupBox Header="Grpahics" 
                          Grid.Row="0" 
                          Grid.Column="2" 
                          Grid.RowSpan="2">
                    <Grid Name="GraphicPlaceBisection" Height="518" Width="631"/>
                </GroupBox>

            </Grid>
        </TabItem>

        <TabItem Header="Решение НУ методом Ньютона">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" ></RowDefinition>
                    <RowDefinition Height="2*" ></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="12*"></ColumnDefinition>
                    <ColumnDefinition Width="150*"/>
                    <ColumnDefinition Width="43*"/>
                    <ColumnDefinition Width="117*"/>
                    <ColumnDefinition Width="322*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <GroupBox Header="Controls" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4">
                    <Grid Margin="-2,0,2,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0*"></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>


                        <Label Content="уравнение:" 
                               Grid.Column="0" 
                               Grid.Row="1" 
                               HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               Foreground="Gray" 
                               FontSize="15"
                               Margin="40,15,40,15"/>

                        <ComboBox Name="EquationList2" 
                                  HorizontalAlignment="Left" 
                                  Foreground="DarkBlue" 
                                  Width="164" 
                                  Grid.Column="1" 
                                  Grid.Row="1" 
                                  Margin="24,26,0,25" 
                                  SelectionChanged="EquationList2_SelectionChanged">
                            <ComboBoxItem IsSelected="True" >
                                <TextBlock>x^5+4=0</TextBlock>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <TextBlock>3cos(3x)=0</TextBlock>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <TextBlock>1.5sin(1.5x)-3cos(3x)=0</TextBlock>
                            </ComboBoxItem>
                        </ComboBox>

                        <TextBlock Grid.Column="0" Panel.ZIndex="1"
                                   Background="White" 
                                   Grid.Row="2" 
                                   Grid.RowSpan="2" 
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="Gray" 
                                   FontSize="15" Margin="10,50">
                            начальное приближение:
                        </TextBlock>


                        <TextBox Visibility="Visible"
                                 Name="StartApproximation" 
                                 Grid.Column="1" 
                                 Grid.Row="2"
                                 Grid.RowSpan="2"
                                 BorderBrush="Black" 
                                 MaxLength="10"
                                 MaxLines="1"
                                 TextAlignment="Center"
                                 LostFocus="TextBox_LostFocus"
                                 Margin="61,66,61,65">
                            1
                        </TextBox>




                        <Label Content="погрешность:" 
                               Grid.Column="0" 
                               Grid.Row="4" 
                               HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               Foreground="Gray" 
                               FontSize="15"
                               Margin="40,15,40,15"/>

                        <TextBox Name="Accuracy2" 
                         Grid.Column="1" 
                         Grid.Row="4" 
                         BorderBrush="Black" 
                         MaxLength="15"
                         MaxLines="1"
                         Height="20"
                         TextAlignment="Center"
                         LostFocus="TextBox_LostFocus"
                         Margin="40,15,40,15">
                            0.1
                        </TextBox>

                        <Button Grid.Column="2" 
                                Grid.Row="2" 
                                Margin="50,0,10,42" 
                                Background="LightGreen" 
                                Click="Solve_Equation_Newton">
                            Найти решение
                        </Button>

                        <Button Grid.Column="2"
                                Grid.Row="3"
                                Margin="50,42,10,0"
                                Background="LightPink"
                                Click="Backhitch_Newton">
                            Очистить
                        </Button>

                    </Grid>
                </GroupBox>

                <GroupBox Header="Log" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4">
                    <ScrollViewer Name="ConsoleScrollViewer2" 
                          VerticalScrollBarVisibility="Auto">
                        <TextBlock Name="OutputConsole2"
                           Background="DarkSlateGray"
                           FontSize="12"
                           Foreground="LightGray"
                           FontWeight="Bold"
                           FontFamily="Consolas"
                           TextWrapping="Wrap" 
                           Padding="5"/>
                    </ScrollViewer>
                </GroupBox>

                <GroupBox Header="Grpahics" 
                          Grid.Row="0" 
                          Grid.Column="4" 
                          Grid.RowSpan="2">
                    <Grid Name="GraphicPlaceNewton" Height="518" Width="631"/>
                </GroupBox>

            </Grid>
        </TabItem>

        <TabItem Header="Решение систем НУ методом простой итерации">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" ></RowDefinition>
                    <RowDefinition Height="2*" ></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24*"></ColumnDefinition>
                    <ColumnDefinition Width="209*"/>
                    <ColumnDefinition Width="91*"/>
                    <ColumnDefinition Width="86*"/>
                    <ColumnDefinition Width="234*"/>
                    <ColumnDefinition Width="644*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <GroupBox Header="Controls" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60*"></RowDefinition>
                            <RowDefinition Height="60"></RowDefinition>
                            <RowDefinition Height="61*"></RowDefinition>
                            <RowDefinition Height="61*"></RowDefinition>
                            <RowDefinition Height="61*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Label Content="Уравнение 1:"
                               HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               Foreground="Gray" 
                               FontSize="15" 
                               Margin="30,15,30,15"
                               Grid.Row="0"
                               Grid.Column="0"/>

                        <Label Content="y=2x^2-5"
                               HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               Foreground="Black" 
                               FontSize="15" 
                               Margin="30,15,30,15"
                               Grid.Row="0"
                               Grid.Column="1" 
                                BorderThickness="1"
                               BorderBrush="LightPink"/>

                        <Label Content="Уравнение 2:"
                               HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               Foreground="Gray" 
                               FontSize="15" 
                               Margin="30,15,30,15"
                               Grid.Row="1"
                               Grid.Column="0"/>

                        <Label Content="y=0.1*(x-4)^2-4"
                               HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               Foreground="Black" 
                               FontSize="15" 
                               Margin="30,15,30,15"
                               Grid.Row="1"
                               Grid.Column="1" BorderThickness="1"
                               BorderBrush="OrangeRed"/>

                        <Label Content="Приближение x:"
                               HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               Foreground="Gray" 
                               FontSize="15" 
                               Margin="30,15,30,15"
                               Grid.Row="2"
                               Grid.Column="0"/>

                        <TextBox Name="StartApproximationX" 
                                 Grid.Column="1" 
                                 Grid.Row="2"
                                 BorderBrush="Black" 
                                 MaxLength="10"
                                 MaxLines="1"
                                 TextAlignment="Center"
                                 LostFocus="TextBox_LostFocus" 
                                 Margin="25,20,26,20">
                            1
                        </TextBox>

                        <Label Content="Приближение y:"
                               HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               Foreground="Gray" 
                               FontSize="15" 
                               Margin="30,15,30,15"
                               Grid.Row="3"
                               Grid.Column="0"/>

                        <TextBox Visibility="Visible"
                                 Name="StartApproximationY" 
                                 Grid.Column="1" 
                                 Grid.Row="3"
                                 BorderBrush="Black" 
                                 MaxLength="10"
                                 MaxLines="1"
                                 TextAlignment="Center"
                                 LostFocus="TextBox_LostFocus" 
                                 Margin="25,20,26,20">
                            1
                        </TextBox>

                        <Label Content="Погрешность:"
                               HorizontalContentAlignment="Center" 
                               VerticalContentAlignment="Center" 
                               Foreground="Gray" 
                               FontSize="15" 
                               Margin="30,15,30,15"
                               Grid.Row="4"
                               Grid.Column="0"/>

                        <TextBox Visibility="Visible"
                                 Name="Accuracy3" 
                                 Grid.Column="1" 
                                 Grid.Row="4"
                                 BorderBrush="Black" 
                                 MaxLength="10"
                                 MaxLines="1"
                                 TextAlignment="Center"
                                 LostFocus="TextBox_LostFocus" 
                                 Margin="25,20,26,20">
                            0.1
                        </TextBox>

                        <Button Grid.Column="2"
                                Grid.Row="1"
                                Background="LightGreen" 
                                Margin="40,15,40,15"
                                 Click="Solve_System">
                            Найти решение
                        </Button>

                        <Button Grid.Column="2"
                                Grid.Row="3"
                                Background="LightPink" 
                                Margin="40,15,40,15" 
                                Click="Backhitch_SimpleIter">
                            Сбросить
                        </Button>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Log" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5">
                    <ScrollViewer Name="ConsoleScrollViewer3" 
                          VerticalScrollBarVisibility="Auto">
                        <TextBlock Name="OutputConsole3"
                           Background="DarkSlateGray"
                           FontSize="12"
                           Foreground="LightGray"
                           FontWeight="Bold"
                           FontFamily="Consolas"
                           TextWrapping="Wrap" 
                           Padding="5"/>
                    </ScrollViewer>
                </GroupBox>

                <GroupBox Header="Grpahics" 
                          Grid.Row="0" 
                          Grid.Column="5" 
                          Grid.RowSpan="2">
                    <Grid Name="GraphicPlaceSimpleIter" Height="518" Width="631"/>
                </GroupBox>

            </Grid>
        </TabItem>

    </TabControl>
</Window>
